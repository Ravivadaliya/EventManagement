<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Event Registration</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/EventManagement.styles.css" asp-append-version="true" />
	<!-- Bootstrap 5 CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

	<style>

		body {
			background: #f8f9fa;
		}

		.form-container {
			max-width: 600px;
			margin: 3rem auto;
			padding: 2rem;
			background: #ffffff;
			border-radius: 10px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
		}

		.form-title {
			margin-bottom: 1.5rem;
		}

		footer {
			background-color: #343a40;
			color: #fff;
			padding: 1rem 0;
			text-align: center;
		}

	</style>
</head>
<body style="background-image: url('/Image/MelaImage3.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand">Royal Rajwadi Rangilu Rajkot</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
					</ul>
				</div>
			</div>
		</nav>
	</header>

	@RenderBody()

	<!-- Sticky Footer -->
	<footer>
		&copy; 2025 Developed By <a href="https://theuniqueitsolution.com/" target="_blank">unique IT Solution</a>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	@if (TempData["Message"] != null)
	{
		<script>
			Swal.fire({
				title: 'Success!',
				text: '@TempData["Message"]',
				icon: 'success',
				confirmButtonText: 'OK'
			}).then((result) => {
				if (result.isConfirmed) {
					location.reload();
				}
			});
		</script>
	}
	@if (TempData["ErrorMessage"] != null)
	{
		<script>
			Swal.fire({
				title: 'Error',
				text: '@TempData["ErrorMessage"]',
				icon: 'error',
				confirmButtonText: 'OK'
			}).then(() => {
				location.reload();
			});
		</script>
	}

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
